#!/bin/sh
PROJECT_BIN_DIR=$(cd $(dirname $0); pwd)
PROJECT_DIR=$(dirname $PROJECT_BIN_DIR)
PROJECT_PEAR_DIR=$PROJECT_DIR/vendor/pear

if [ -f $PROJECT_BIN_DIR/php -a "x$PHP_PEAR_PHP_BIN" = x ]; then
  PHP_PEAR_PHP_BIN=$PROJECT_BIN_DIR/php
  export PHP_PEAR_PHP_BIN
fi

PHP_PEAR_INSTALL_DIR=$PROJECT_PEAR_DIR/php
PHP_PEAR_SYSCONF_DIR=$PROJECT_DIR/etc
export PHP_PEAR_INSTALL_DIR PHP_PEAR_SYSCONF_DIR

$PROJECT_PEAR_DIR/bin/$(basename $0) $*
